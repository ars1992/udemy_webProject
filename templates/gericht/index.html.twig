{% extends 'base.html.twig' %}



{% block body %}


<br>
<div class="container">
    {% for message in app.flashes("erfolg") %}
        <div class="alert alert-success" role="alert">
            <h2>{{message}}</h2>
        </div>
    {% endfor %}
    <h2>Gerichte Bearbeiten</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Bestellnummer</td>
                <td>Name</td>
                <td>Beschreibung</td>
                <td>Kategorie</td>
                <td>Preis</td>
                <td>Löschen</td>
                <td><a href="{{path('gerichtanlegen')}}">Anlegen</a></td>
            </tr>
        </thead>
        <tbody>
        {% for gericht in gerichte %}
            <tr>
                <td>{{gericht.id}}</td>
                <td><a href="{{path('gerichtanzeigen', {id: gericht.id})}}">{{gericht.name}}</a></td>
                <td>{{gericht.beschreibung}}</td>
                <td>{{gericht.kategorie}}</td>
                <td>{{gericht.preis}}€</td>
                <td><a href="{{path('gerichtentfernen', {id: gericht.id})}}">X</a></td>
                <td></td>
            <tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
