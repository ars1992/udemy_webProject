{% extends 'base.html.twig' %}


{% block body %}
<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Menukarte</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".Getränk">Getränke</li>
					<li class="control" data-filter=".Vorspeise">Vorspeisen</li>
					<li class="control" data-filter=".Hauptspeise">Hauptspeisen</li>
					<li class="control" data-filter=".Nachspeise">Nachspeisen</li>
					<li class="control" data-filter="all">Alle Gerichte</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>
			<div class="row playlist-area">
            {% for gericht in gerichte %}
                <div class="mix col-lg-3 col-md-4 col-sm-6 genres {{gericht.kategorie}}">
					<div class="playlist-item">
						<img src="img/playlist/1.jpg" alt="">
						<h5>{{gericht.name}}</h5>
                        <p>BestNum.: {{gericht.id}}</p>
                        <img src="{{asset('bilder/' ~ gericht.bild)}}">
                        <p>{{gericht.beschreibung}}</p>
                        <p>{{gericht.preis}}€</p>
					</div>
				</div>
            {% endfor %}
				
			</div>
		</div>
	</section>

{% endblock %}
